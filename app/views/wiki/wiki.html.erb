<%= stylesheet_link_tag    "application", :media => "all" %>
<%= render 'shared/header' %>

<h1>Wiki</h1>
<h4>Listing articles</h4>

<div class='article_list'>
<table>
  <tr>
    <th><h5>Title</h5></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= button_to 'Show', article_path(article),
              method: :get %></td>
      <% if user_signed_in? %>
        <td><%= button_to 'Edit', edit_article_path(article),
                method: :get %></td>
        <td><%= button_to 'Delete', article_path(article),
                method: :delete,
                data: { confirm: 'Do you really want to delete this article?' }
            %>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>
</div>

<div class='footer'>
  <% if user_signed_in? %>
    <%= button_to 'New Article', new_article_path, method: :get%>  
  <% end %>
  <%= button_to 'Home', root_path, method: :get %>
</div>

<%= render 'shared/footer' %>