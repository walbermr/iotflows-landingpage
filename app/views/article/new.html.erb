<% if user_signed_in? %>
  <%= form_with scope: :article, url: new_article_route, local: true do |form| %>
    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@article.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>
  
    <p>
      <%= form.label :text %><br>
      <%= form.text_area :text %>
    </p>
  
    <p class='row'>
      <%= form.submit %>
    </p>
      
  <% end %>
  <%= button_to 'Back', wiki_path, method: :get %>
    
<% else %>
  <div>
    <p>Sorry, only project members can create new articles.</p>
  </div>
  <div>
    <%= button_to 'Login', new_user_session_path, method: :get%>
    <%= button_to 'Home', '/', method: :get%>
  </div>
<% end %>